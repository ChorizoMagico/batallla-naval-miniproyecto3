<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane fx:id="anchorPane" onKeyPressed="#handleReturnBoat"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.batallanaval.controller.PreparationViewController"
            stylesheets="@../css/styles-preparation.css"
            style="-fx-background-color: #8ebdb6" >
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
        >
            <!-- Título -->
            <Label text="Esconde tus barcos"
                   style="
                    -fx-font-family: Consolas;
                    -fx-font-size: 30px;
                    -fx-font-weight: bold;
                    -fx-text-fill: #063940"/>

            <!-- Contenedor principal para los GridPanes -->
            <HBox alignment="CENTER" spacing="50">
                <!-- GridPane del mar -->
                <GridPane fx:id="boardGrid"
                          gridLinesVisible="true" prefHeight="396.0" prefWidth="412.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Group />
                        <Button prefHeight="41.0" prefWidth="42.0" visible="false" />
                    </children>
                </GridPane>

                <!-- GridPane de los barcos -->
                <GridPane fx:id="showPane"
                          style="-fx-pref-height: 396px;
                        -fx-pref-width: 412px;
                        -fx-grid-lines-visible: true;
                        -fx-background-color: #3498db;
                        -fx-border-color: black;
                        -fx-border-width: 1;">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>

                <VBox>
                    <!-- Mensajes y selección de barcos -->
                    <Label fx:id="errorLabel" alignment="CENTER"
                           text="Seleccione un barco" textAlignment="CENTER"
                           style="
                            -fx-font-family: Consolas;
                            -fx-font-size: 20px;
                            -fx-font-weight: bold;
                            -fx-text-fill: #195e63">
                    </Label>

                    <Label fx:id="boatLabel" alignment="CENTER"
                           text="Barco sin seleccionar" textAlignment="CENTER"
                           style="
                            -fx-font-family: Consolas;
                            -fx-font-size: 17px;
                            -fx-font-weight: bold;
                            -fx-text-fill: #063940">
                    </Label>

                    <AnchorPane fx:id="boatPane"  prefHeight="80.0" prefWidth="291.0"/>
                </VBox>
            </HBox>

            <!-- Controles inferiores -->
            <VBox alignment="CENTER" spacing="10">
                <!-- Campo de nombre -->
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Inserte su nombre:"
                           style="
                            -fx-font-family: Consolas;
                            -fx-font-size: 20px;
                            -fx-text-fill: #063940"/>
                    <TextField fx:id="nameField" prefHeight="25.0" prefWidth="184.0"/>
                </HBox>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="playButton" onAction="#handlePlay" prefHeight="20.0" prefWidth="80.0" text="Play" />
                    <Button fx:id="returnButton" onAction="#handleReturn" prefHeight="20.0" prefWidth="80.0" text="Exit" />
                </HBox>

                <!-- Label warning -->
                <Label fx:id="warningSize" alignment="CENTER"
                       textAlignment="CENTER"
                       style="
                            -fx-font-family: Consolas;
                            -fx-font-size: 17px;
                            -fx-font-weight: bold;
                            -fx-text-fill: red" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>